<link rel="stylesheet" href="/css/user_profile.css">




<body>


    <section id="main-sec">



        <h1>Codeial Profile Page </h1>

        <% if(user.id==profile_user.id){%>


        <form action="/users/update/<%= profile_user.id%>" method="POST" id="form">
            <input type="text" name="name" placeholder="Your Name" value="<%= profile_user.name%>" required><br>
            <input type="email" name="email" placeholder="Your Email" value="<%= profile_user.email%>" required><br>
            <input type="submit" value="Update">
        </form>

        <%}else{%>
        <p><%= profile_user.name %></p>
        <p><%= profile_user.email %></p>

        <%}%>



</section>
</body>